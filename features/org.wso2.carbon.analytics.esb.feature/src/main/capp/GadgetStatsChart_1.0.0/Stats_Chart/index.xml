<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <ModulePrefs title="Generic Stats" description="g1" height="250">
        <Require feature="pubsub-2"/>
        <Require feature="dynamic-height"/>
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
        <head>

          <!-- Custom Theme -->
          <link rel="stylesheet" type="text/css" href="/portal/libs/bootstrap_3.3.5/css/bootstrap.min.css" />
          <link rel="stylesheet" type="text/css" href="/portal/libs/font-wso2_1.0.0/css/font-wso2.min.css" />
          <link rel="stylesheet" type="text/css" href="/portal/libs/theme-wso2_1.0/css/theme-wso2.css" />
          <link rel="stylesheet" type="text/css" href="/portal/extensions/themes/analytics/css/gadget.css" />
          <link rel="stylesheet" type="text/css" href="css/custom.css" />
          
          <!-- jQuery -->
          <script src="/portal/libs/jquery_1.11.0/jquery-1.11.3.min.js"></script> 

          <!-- Custom -->
          <script src="../commons/js/moment.min.js"></script>
          <script src="../commons/js/gadget-utils.js"></script>

          <script src="js/gadgetconf.js"></script>
          <script src="js/main.js"></script>

        </head>
        <body class="stats add-padding-5x">

            <div class="row no-gutter add-margin-top-5x">
                <div class="col-7 stats-total add-padding-top-1x">
                    <h2><b>Total</b> requests</h2>
                    <h1><div id="totalCount"></div></h1>
                </div>
                <div class="col-5 stats-breakdown text-right">
                    <div class="icon-danger">
                        <h1><div id="failedPercent"></div>%</h1>
                        <h2><div id="failedCount"></div> Failed</h2>
                    </div>
                    <div class="icon-success">
                        <h1><div id="successPercent"></div>%</h1>
                        <h2><div id="successCount"></div> Success</h2>
                    </div>
                </div>
            </div>

        </body>
        ]]>
    </Content>
</Module>